{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api",
  "projectType": "application",
  "tags": ["scope:api", "type:app"],
  "targets": {
    "setup-env": {
      "command": "if [ ! -f \"./apps/api/.env\" ]; then cp ./apps/api/.env.example ./apps/api/.env; fi"
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly deploy --config ./apps/api/fly.toml --dockerfile ./apps/api/Dockerfile"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "continuous": true,
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      },
      "parallelism": true
    },
    "auth-schema-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx @better-auth/cli generate --config app/config/auth.ts --output app/database/auth-schema.ts --yes",
        "cwd": "apps/api"
      }
    },
    "launch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly launch --config ./apps/api/fly.toml"
      }
    },
    "db-generate-migrations": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit generate",
        "cwd": "apps/api"
      }
    },
    "db-generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit generate",
        "cwd": "apps/api"
      }
    },
    "db-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit migrate",
        "cwd": "apps/api"
      }
    },
    "db-studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit studio",
        "cwd": "apps/api"
      }
    },
    "db-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit push",
        "cwd": "apps/api"
      }
    }
  }
}
