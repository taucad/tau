{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "setup-env": {
      "command": "if [ ! -f \"./apps/api/.env\" ]; then cp ./apps/api/.env.example ./apps/api/.env; fi"
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly deploy --config ./apps/api/fly.toml --dockerfile ./apps/api/Dockerfile"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node ./dist/apps/api/main.js"
      }
    },
    "launch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly launch --config ./apps/api/fly.toml"
      }
    },
    "import-replicad-chunks": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/api/app/scripts/import-replicad-chunks.ts",
        "cwd": "."
      }
    },
    "build-replicad-chunks": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/api/app/scripts/build-replicad-chunks.ts",
        "cwd": "."
      }
    },
    "test-embeddings": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/api/app/scripts/test-embeddings.ts",
        "cwd": "."
      }
    },
    "test-database": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/api/app/scripts/test-database.ts",
        "cwd": "."
      }
    },
    "test-rag": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx apps/api/app/scripts/test-rag.ts",
        "cwd": "."
      }
    }
  }
}
