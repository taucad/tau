{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "types": ["node"],
    "target": "ESNext",
    "outDir": "./out-tsc/lib",
    "baseUrl": ".",
    "paths": {
      "#*": ["app/*"]
    },
    "erasableSyntaxOnly": false // Incompatible with NestJS dependency injection.
  },
  "include": ["app/**/*.ts"],
  "exclude": ["app/**/*.spec.ts", "app/**/*.test.ts", "vite.config.ts"],
  "references": [
    {
      "path": "../../libs/tau-examples/tsconfig.lib.json"
    }
  ]
}
