{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "./out-tsc/spec",
    "erasableSyntaxOnly": false, // Incompatible with NestJS dependency injection.
    "types": [
      "node",
      "vitest/importMeta",
      "vite-plugin-node",
      "vitest"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.setup.ts",
    "drizzle.config.ts",
    "app/**/*.test.ts",
    "app/**/*.spec.ts",
    "app/**/*.test-d.ts",
    "app/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
  ]
}
