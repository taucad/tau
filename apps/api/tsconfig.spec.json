{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/api/out-tsc",
    "types": [
      "node",
      "vitest/globals",
      "vitest/importMeta",
      "vite-plugin-node",
      "vitest"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.setup.ts",
    "drizzle.config.ts",
    "app/**/*.test.ts",
    "app/**/*.spec.ts",
    "app/**/*.test-d.ts",
    "app/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
  ]
}
