{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ui",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project ui --web",
  "targets": {
    "test": {
      "outputs": ["{workspaceRoot}/coverage/apps/ui"],
      "options": {},
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly deploy --config ./apps/ui/fly.toml --dockerfile ./apps/ui/Dockerfile"
      }
    },
    "launch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly launch --config ./apps/ui/fly.toml"
      }
    }
  }
}
