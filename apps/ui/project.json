{
  "name": "ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ui",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project ui --web",
  "targets": {
      "build": {
        "executor": "nx:run-commands",
        "outputs": ["{projectRoot}/build"],
        "options": {
          "command": "react-router build",
          "cwd": "apps/ui",
          "env": {
            "NODE_OPTIONS": "--max-old-space-size=4096"
          }
        }
      },
    "test": {
      "outputs": ["{workspaceRoot}/coverage/apps/ui"],
      "options": {},
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly deploy --config ./apps/ui/fly.toml --dockerfile ./apps/ui/Dockerfile"
      }
    },
    "launch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "fly launch --config ./apps/ui/fly.toml"
      }
    }
  }
}
