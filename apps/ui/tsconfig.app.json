{
  "extends": "./tsconfig.json",
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "vite-environment.d.ts",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "outDir": "./out-tsc/lib",
    "rootDirs": [".", "./.react-router/types"],
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "types": ["@react-router/node", "vite/client", "node"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2024",
    "baseUrl": ".",
    "paths": {
      "#*": ["app/*"]
    }
  },
  "exclude": [
    "tests/**/*.spec.ts",
    "tests/**/*.test.ts",
    "tests/**/*.spec.tsx",
    "tests/**/*.test.tsx",
    "tests/**/*.spec.js",
    "tests/**/*.test.js",
    "tests/**/*.spec.jsx",
    "tests/**/*.test.jsx",
    "app/**/*.test.ts",
    "app/**/*.spec.ts",
    "app/**/*.test.tsx",
    "app/**/*.spec.tsx",
    "app/**/*.test.js",
    "app/**/*.spec.js",
    "app/**/*.test.jsx",
    "app/**/*.spec.jsx",
    "source.generated.ts"
  ],
  "references": [
    {
      "path": "../../packages/converter/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api-extractor/tsconfig.lib.json"
    },
    {
      "path": "../../libs/tau-examples/tsconfig.lib.json"
    }
  ]
}
