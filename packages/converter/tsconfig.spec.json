{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "node",
      "vitest/importMeta",
      "vitest"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "#*": ["src/*"]
    }
  },
  "include": [
    "vitest.config.ts",
    "vitest.setup.ts",
    "tsup.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test-d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
  ]
}
